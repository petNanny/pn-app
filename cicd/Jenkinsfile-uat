pipeline {

    agent any
    

    triggers {
        cron '''TZ=Australia/Sydney
        H H(9-17)/3 * * 1-7'''
    }

    environment {
        ENVIRONMENT = 'uat'
        BRANCH_UAT = 'dev'
        S3_CREDENTIAL = 'S3'
        S3_REGION = 'us-east-1'
        BUCKET_NAME = 's3://petnanny.com'
        WORKSPACE_PATH = '/var/lib/jenkins/workspace/petnanny/build'
    }

    //options {
        //maximum archieved artifacts
       // echo "set log rotation"
    //}

    tools {nodejs "NodeJS"}
    
    stages {
        stage('Install package') {
            steps {
                echo "Installing packages"
                sh 'npm install'
            }
        }
        
        stage('Build') {
            steps {
                echo "Building"
                sh 'npm run build'
            }
        }
        
        stage('Test') {
            steps {
                echo "testing"
            }
        }
        
        
         stage('Deploy to UAT') {
            steps {
                echo "Deploy to UAT"
                deployToS3(ENVIRONMENT)
            }
        }
        
    }

    post {
    
        always {
        cleanWs()
				sh 'ls -la'
        }
        
        success{
            echo "In post-success"
        }
        failure {
            echo "In post-failure"

        }
    }
}

def deployToS3(environment) {
    echo 'Deploying to ' + environment + ' '
    withAWS(credentials: 'S3', region: 'us-east-1') {
        //clean the bucket
        sh 'aws s3 rm "${BUCKET_NAME}" --recursive'
        //copy the all files
        sh 'aws s3 cp "${WORKSPACE_PATH}" "${BUCKET_NAME}" --recursive'
    }
}
